<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/myImage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/rick"
            android:scaleType="centerCrop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/name_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/input_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/name_Id"
                android:layout_marginStart="10dp"
                android:text="@string/rick"
                app:layout_constraintTop_toTopOf="@id/name_Id"
                app:layout_constraintBottom_toBottomOf="@id/name_Id"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF5722"/>

            <TextView
                android:id="@+id/status_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                app:layout_constraintTop_toBottomOf="@id/name_Id"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/input_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/status_Id"
                android:layout_marginStart="10dp"
                android:text="@string/rick"
                app:layout_constraintTop_toTopOf="@id/status_Id"
                app:layout_constraintBottom_toBottomOf="@id/status_Id"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF5722"/>

            <TextView
                android:id="@+id/specie_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/specie"
                app:layout_constraintTop_toBottomOf="@id/status_Id"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/input_specie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/specie_Id"
                android:layout_marginStart="10dp"
                android:text="@string/rick"
                app:layout_constraintTop_toTopOf="@id/specie_Id"
                app:layout_constraintBottom_toBottomOf="@id/specie_Id"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF5722"/>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>